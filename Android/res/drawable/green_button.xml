<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#225222" />
            <stroke
                    android:width="1dp"
                    android:color="#53933f" />
            <corners
                    android:radius="30dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#80d656"
                    android:endColor="#53933f"
                    android:angle="270" />
            <stroke
                    android:width="3dp"
                    android:color="#53933f" />
            <corners
                    android:radius="30dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>
