<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#222252" />
            <stroke
                    android:width="1dp"
                    android:color="#2f6699" />
            <corners
                    android:radius="30dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <gradient
                    android:startColor="#222252"
                    android:endColor="#222232"
                    android:angle="90" />
            <corners
                    android:radius="30dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#44bdef"
                    android:endColor="#2f6699"
                    android:angle="270" />
            <stroke
                    android:width="3dp"
                    android:color="#2f6699" />
            <corners
                    android:radius="40dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>
